<li class="nav-item">
  <span
    class="nav-link d-flex justify-content-between align-items-center <%= "collapsed" unless active %>"
    data-bs-toggle="collapse"
    data-bs-target="#submenu-<%= node.id %>"
    aria-expanded="<%= active %>"
  >
    <span>
      <span class="sidebar-icon"
        ><span class="fas fa-fw fa-<%= node.icon %>"></span
      ></span>
      <span class="sidebar-text"><%= node.label %></span>
    </span>
    <span class="link-arrow"
      ><span class="fas fa-fw fa-chevron-right"></span
    ></span>
  </span>
  <div
    class="multi-level collapse <%= "show" if active %>"
    role="list"
    id="submenu-<%= node.id %>"
    aria-expanded="false"
  >
    <ul class="flex-column nav">
      <%= submenu %>
    </ul>
  </div>
</li>
