<div class="modal fade" id="editTaskModal" tabindex="-1" aria-labelledby="editTaskModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content p-lg-3">
      <div class="modal-header align-items-start border-gray-300">
        <div class="d-block">
          <h2 class="h5 mb-3"><%= Faker::Company.buzzword.titleize %></h2>
          <div class="d-flex">
            <div class="d-block me-3 me-sm-4">
              <h5 class="fs-6 fw-normal" id="editTaskModalLabel">Members</h5>
              <a href="#" class="avatar-md" data-bs-toggle="tooltip" title="Casey" data-controller="tooltip">
                <img class="rounded" alt="Casey" src="<%= asset_pack_path "media/images/team/casey.jpg" %>">
              </a>
              <a href="#" class="avatar-md me-1" data-bs-toggle="tooltip" title="Jill" data-controller="tooltip">
                <img class="rounded" alt="Jill" src="<%= asset_pack_path "media/images/team/jill.jpg" %>">
              </a>
              <button class="btn btn-icon btn-sm btn-gray-300">
                <span class="fas fa-plus"></span>
              </button>
            </div>
            <div class="d-block me-3">
              <h5 class="fs-6 fw-normal">Labels</h5>
              <a href="#" class="badge bg-success text-white py-2 rounded-1 px-3 me-1">
                Design
              </a>
              <button class="btn btn-sm btn-gray-400">
                <span class="fas fa-plus"></span>
              </button>
            </div>
          </div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body py-4">
        <div class="row">
          <div class="col-12 col-lg-9">
            <div class="row mb-4">
              <div class="col-auto">
                <div class="border border-3 rounded mb-2">
                  <img class="image-sm rounded" src="<%= user_image(current_user) %>" alt="<%= current_user.name %>">
                </div>
                <div class="text-center">
                  <a href="#!" class="text-gray-700 me-2">
                    <span class="fas fa-paperclip"></span>
                  </a>
                  <a href="#!" class="text-gray-700">
                    <span class="fas fa-camera-retro"></span>
                  </a>
                </div>
              </div>
              <div class="col">
                <form>
                  <textarea class="form-control" id="exampleFormControlTextarea" placeholder="Leave a comment" rows="3"></textarea>
                </form>
              </div>
            </div>
            <div class="row mb-4 mb-lg-0">
              <div class="col-12 mb-4">
                <div class="bg-gray-100 border border-gray-300 rounded p-3">
                  <div class="d-flex align-items-center mb-2">
                    <h3 class="fs-6 mb-0 me-3">Steve</h3>
                    <small>32 minutes ago</small>
                  </div>
                  <p class="text-dark mb-1"><%= Faker::Books::Dune.quote %></p>
                  <a class="text-gray-700 hover:underline small" href="#">Edit</a> &middot; <a class="text-gray-700 hover:underline small" href="#">Delete</a>
                </div>
              </div>
              <div class="col-12">
                <div class="bg-gray-100 border border-gray-300 rounded p-3">
                  <div class="d-flex align-items-center mb-2">
                    <h3 class="fs-6 mb-0 me-3">Mike</h3>
                    <small>1 hour ago</small>
                  </div>
                  <p class="text-dark mb-1"><%= Faker::Books::Dune.quote %></p>
                  <a class="text-gray-700 hover:underline small" href="#">Edit</a> &middot; <a class="text-gray-700 hover:underline small" href="#">Delete</a>
                </div>
              </div>
            </div>
          </div>
          <div class="col-12 col-lg-3">
            <div class="d-grid gap-2">
              <a href="#" class="btn btn-sm btn-gray-300 rounded-1 py-1 ps-3 text-start"><span class="fas fa-user me-2"></span>Members</a>
              <a href="#" class="btn btn-sm btn-gray-300 rounded-1 py-1 ps-3 text-start"><span class="fas fa-tag me-2"></span>Labels</a>
              <a href="#" class="btn btn-sm btn-gray-300 rounded-1 py-1 ps-3 text-start"><span class="fas fa-check-circle me-2"></span>Checklist</a>
              <a href="#" class="btn btn-sm btn-gray-300 rounded-1 py-1 ps-3 text-start"><span class="fas fa-paperclip me-2"></span>Attachment</a>
              <a href="#" class="btn btn-sm btn-gray-300 rounded-1 py-1 ps-3 text-start"><span class="fas fa-clock me-2"></span>Due Date</a>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer justify-content-start border-gray-300">
        <div class="d-none d-sm-flex">
          <a href="#" class="btn btn-gray-200 me-2"><span class="fas fa-arrow-right me-2"></span>Move</a>
          <a href="#" class="btn btn-gray-200 me-2"><span class="fas fa-archive me-2"></span>Archive</a>
          <a href="#" class="btn btn-gray-200 me-2"><span class="fas fa-eye me-2"></span>Watch<span class="fas fa-check-circle ms-3 text-success"></span></a>
          <a href="#" class="btn btn-gray-200 me-2"><span class="fas fa-share-alt me-2"></span>Share</a>
        </div>
        <div class="col-12 d-grid gap-2 d-sm-none">
          <a href="#" class="btn btn-gray-200 me-2 rounded-1 py-1 text-start"><span class="fas fa-arrow-right me-2"></span>Move</a>
          <a href="#" class="btn btn-gray-200 me-2 rounded-1 py-1 text-start"><span class="fas fa-archive me-2"></span>Archive</a>
          <a href="#" class="btn btn-gray-200 me-2 rounded-1 py-1 text-start"><span class="fas fa-eye me-2"></span>Watch<span class="fas fa-check-circle ms-3 text-success"></span></a>
          <a href="#" class="btn btn-gray-200 me-2 rounded-1 py-1 text-start"><span class="fas fa-share-alt me-2"></span>Share</a>
        </div>
      </div>
    </div>
  </div>
</div>