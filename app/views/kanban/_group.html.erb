<div class="col-12 col-sm-6 col-lg-4 col-xl-3">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="fs-6 fw-bold mb-0"><%= group.humanize %></h5>
    <div class="dropdown">
      <button type="button" class="btn btn-sm fs-6 px-1 py-0 dropdown-toggle" id="dropdownMenuLink-<%= group %>" data-bs-toggle="dropdown" aria-expanded="false">
        <span class="fas fa-ellipsis-h"></span>
      </button>
      <div class="dropdown-menu dashboard-dropdown dropdown-menu-start py-0" aria-labelledby="dropdownMenuLink-<%= group %>">
        <a class="dropdown-item fw-normal" href="#"><span class="fas fa-plus"></span>Add card</a>
        <a class="dropdown-item fw-normal" href="#"><span class="far fa-clone"></span>Copy list</a>
        <a class="dropdown-item fw-normal" href="#">Move list</a>
        <a class="dropdown-item fw-normal" href="#">Watch</a>
        <div role="separator" class="dropdown-divider my-0"></div>
        <a class="dropdown-item fw-normal text-danger rounded-bottom" href="#"><span class="fas fa-trash-alt"></span>Remove</a>
      </div>
    </div>
  </div>
  <div class="list-group kanban-list" data-dragula-target="container">
    <% rand(1..3).times do %> <%= render "kanban/task" %> <% end %>
    <button type="button" class="btn btn-outline-gray-700 dashed-outline new-card w-100" data-bs-toggle="modal" data-bs-target="#KanbanAddCard-<%= group %>"><span class="fas fa-plus me-2"></span> Add another card</button>
  </div>
  <div class="d-grid">
    <div class="modal fade" id="KanbanAddCard-<%= group %>" tabindex="-1" aria-labelledby="KanbanAddCardLabel-<%= group %>" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-4">
          <div class="modal-header pb-0 border-0">
            <h5 class="modal-title fw-normal" id="KanbanAddCardLabel-<%= group %>">
              Add a new task
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body pb-0">
            <div class="mb-3">
              <input type="email" class="form-control" id="Input-<%= group %>" placeholder="Enter a title for this card…" />
            </div>
            <div class="mb-3">
              <textarea class="form-control" id="Textarea-<%= group %>" placeholder="Enter a description for this card…" rows="3"></textarea>
            </div>
          </div>
          <div class="modal-footer border-0 pt-0 justify-content-start">
            <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">
              Close
            </button>
            <button type="button" class="btn btn-success"><span class="fas fa-plus me-2"></span>Add card</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
